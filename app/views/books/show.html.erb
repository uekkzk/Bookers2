<%= flash[:notice] %>
<div class="container">
  <div class="row">
  	<div class="col-xs-3">

      <h1>User info</h1>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg' %>
      <h4>name<%= @user.name %></h4>
      <h4>introduction</h4>
      <%= @user.introduction %>
      <%= link_to "編集",edit_user_path(@user.id), class: "btn btn-default" %>

      <h1>New book</h1>
      <%= form_for Book.new do |f| %>
      <p>Title</p>
      <%= f.text_field :title %>
      <p>Opinion</p>
      <%= f.text_area :body %>
      <%= f.submit "Create Book", class: "btn btn-default" %>
      <% end %>
    </div>

    <div class="col-xs-9">
      <h1>Book detail</h1>
      <table class="table table-striped">
        <td><%=link_to user_path(@user.id) do %>
              <%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', fallback: "No_Image.png", size: "50x50" %><%= @book.user.name%>
            <% end %></td>
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
        <% if @book.user == current_user %>
        <td><%= link_to "Edit", edit_book_path(@book.id)%></td>
        <td><%= link_to "Destroy", book_path(@book.id), method: :delete %></td>
        <% end %>
      </table>
    </div>
  </div>
</div>
