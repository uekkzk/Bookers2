<div class="container">
  <div class="row">
  	<div class="col-xs-3">

      <h1>User info</h1>
      <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "No_Image.png", size: "100x100" %>
      <h4>name<%= @user.name %></h4>
      <h4>introduction</h4>
      <%= @user.introduction %>
      <%= link_to "編集", edit_user_path(@user.id), class: "btn btn-default" %>

      <h1>New book</h1>
      <%= form_for (@book) do |f| %>
      <p>Title</p>
      <%= f.text_field :title %>
      <p>Opinion</p>
      <%= f.text_area :body %>
      <%= f.submit "Create Book", class: "btn btn-default" %>
      <% end %>
    </div>

    <div class="col-xs-9">
      <h1>Users</h1>
      <table class="table table-striped">
        <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <th><%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "No_Image.png", size: "100x100" %></th>
          <th><%= user.name %></th>
          <th><%= link_to "Show", user_path(user.id) %></th>
          <th></th>
        </tr>
        <% end %>
      </tbody>
      </table>
    </div>
  </div>
</div>
